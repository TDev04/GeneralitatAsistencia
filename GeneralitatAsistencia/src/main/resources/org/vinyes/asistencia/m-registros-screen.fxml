<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.vinyes.asistencia.Controllers.MRegistrosController"
            prefHeight="360.0" prefWidth="600.0">
    <MenuBar AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <Menu text="Exportar">
            <MenuItem text="Exportar registres a CSV" onAction="#userToCSV"/>
        </Menu>
    </MenuBar>
    <Label layoutX="20.0" layoutY="25.0" text="Registres del usuari:" />
    <TextArea fx:id="textAreaUsuario" layoutX="20.0" layoutY="50.0" prefWidth="560.0" prefHeight="300.0"
              editable="false" wrapText="true"/>
</AnchorPane>
